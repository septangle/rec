.AdminView
  .side-bar
    width 200px;
    background: rgb(0, 188, 212)
    color white
    .tab-list
      .tab
        cursor pointer
        padding 20px 20px;
        .tab-icon
          display none //TODO
        .tab-label
          padding 0 10px;
        &:hover
          background: white;
          color: rgb(0, 188, 212);
          box-shadow : 0px 2px 15px rgba(0, 0, 0, 0.25);
        &.selected
          border-left 2px solid white

  .input-label
    display: inline-block;
    width: 200px;
    text-align: left;
    padding: 20px;
    font-size: 16px;
    color: #333333;
    letter-spacing: 0;

  .input-container
    height 40px
    width 240px
    border: 1px solid #999999;
    padding 10px 15px;
    display:inline-block
    &.dijitValidationTextBoxError
      border 1px solid red
    .dijitValidationInner
      display none //TODO
    input.dijitInputInner
      text-align left
      border  none
      line-height 18px
      width 200px
      font-size 16px;
      &:focus
        outline none

  .btn
    position relative;
    left 135px
    width 100px
    height 40px;
    background: #009EFF;
    border none
    font-size: 16px;
    color: #FFFFFF;
    letter-spacing: 0;
    display: inline-block;
    line-height: 40px;
    text-align: center;
    &:focus
      outline:none
    &:hover
      box-shadow : 0px 2px 15px rgba(0, 0, 0, 0.25);