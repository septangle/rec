.RegisterView
  padding: 30px 0;
  .valid-msg
    visibility hidden
    left: 140px;
    position: relative;
    padding-bottom: 10px;
    font-size: 14px;
    color: red;
  .dataForm
    padding: 30px 30px 15px 30px;
  button
    cursor pointer
  .paneStack
    &>div
      display none
      &.selected
        display block
  &>.container
    box-shadow: 0px 2px 20px gray;
    background: white;
  .register-status
    padding:30px 0 0;
    >img
      width: 450px;margin: auto;
    .labels
      padding: 10px 42px;
    .status-label
      display inline-block
      padding 0px 23px;
  .title
    font-family: MicrosoftYaHei;
    font-size: 24px;
    color: #333333;
    letter-spacing: 0;
    line-height: 24px;
    text-align center
  .input-label
    display: inline-block;
    width: 100px;
    text-align: right;
    padding: 20px;
    font-size: 12px;
    color: #333333;
    letter-spacing: 0;
  .input-container
    height 40px
    width 240px
    border: 1px solid #999999;
    padding 10px 15px;
    display:inline-block
    &.dijitValidationTextBoxError
      border 1px solid red
    .dijitValidationInner
      display none //TODO
    input.dijitInputInner
        text-align left
        border  none
        line-height 18px
        width 200px
        font-size 16px;
        &:focus
          outline none
  .btn
    position relative;
    left 135px
    width 100px
    height 40px;
    background: #009EFF;
    border none
    font-size: 16px;
    color: #FFFFFF;
    letter-spacing: 0;
    line-height: 16px;
    &:focus
      outline:none
    &:hover
      box-shadow : 0px 2px 15px rgba(0, 0, 0, 0.25);