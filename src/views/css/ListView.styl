.ListView
  height 1200px;
  background white
  .side-bar
    width 200px;
    background: #0a94e8
    color white
    .tab-list
      .tab
        padding 20px 20px;
        .tab-label
          padding 0 10px;
        &:hover
          background: white;
          color: #0a94e8;
          box-shadow : 0px 2px 15px rgba(0, 0, 0, 0.25);
        &.selected
          border-left 2px solid white