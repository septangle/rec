.ListView
  height 1200px;
  background white
  .side-bar
    width 200px;
    background: rgb(0, 188, 212)
    color white
    .tab-list
      .tab
        padding 20px 20px;
        .tab-label
          padding 0 10px;
        &:hover
          background: white;
          color: rgb(0, 188, 212);
          box-shadow : 0px 2px 15px rgba(0, 0, 0, 0.25);
        &.selected
          border-left 2px solid white
  .titlePane
    padding 10px;
  .btn
    position relative;
    width 100px
    height 40px;
    background: rgb(0, 188, 212);
    border none
    font-size: 16px;
    color: #FFFFFF;
    letter-spacing: 0;
    line-height: 16px;
    cursor pointer
    .btn-label
      padding-left 10px;
    &:focus
      outline:none
    &:hover
      box-shadow : 0px 2px 15px rgba(0, 0, 0, 0.25);