.ScanDetail
  padding 30px
  .input-label
    display: inline-block;
    width: 100px;
    text-align: right;
    padding: 20px;
    font-size: 12px;
    color: #333333;
    letter-spacing: 0;
  .input-container
    height 40px
    width 240px
    border: 1px solid #999999;
    padding 10px 15px;
    display:inline-block
    &.dijitValidationTextBoxError
      border 1px solid red
    .dijitValidationInner
      display none //TODO
    input.dijitInputInner
      text-align left
      border  none
      line-height 18px
      width 200px
      font-size 16px;
      &:focus
        outline none
  .image-list
    min-height 450px;
    margin: 30px;
    border: 1px solid lightgray;
    .photo
      display inline-block
      margin 5px;
      img
        height: 200px;
      &.add-btn
        cursor pointer
    .upload-btn
      cursor pointer;
  .button-bar
    text-align right
    padding-right 30px;
  .btn
    position relative;
    width 100px
    height 40px;
    background: #009EFF;
    border none
    font-size: 16px;
    color: #FFFFFF;
    letter-spacing: 0;
    line-height: 16px;
    &:focus
      outline:none
    &:hover
      box-shadow : 0px 2px 15px rgba(0, 0, 0, 0.25);





