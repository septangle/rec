.ScanDetail
  padding 30px
  .loader-node
    display:none
    color: white
    &.show
      display: inline-block
  .input-label
    display: inline-block;
    width: 100px;
    text-align: right;
    padding: 20px;
    font-size: 12px;
    color: #333333;
    letter-spacing: 0;
  .input-container
    height 40px
    width 240px
    border: 1px solid #999999;
    padding 10px 15px;
    display:inline-block
    &.dijitValidationTextBoxError
      border 1px solid red
    .dijitValidationInner
      display none //TODO
    input.dijitInputInner
      text-align left
      border  none
      line-height 18px
      width 200px
      font-size 16px;
      &:focus
        outline none
  .image-list
    min-height 350px;
    min-width: 500px;
    margin: 30px;
    border: 1px solid lightgray;
    .photo
      display inline-block
      margin 5px;
      position relative
      .image
        text-align: center;
        line-height: 150px;
        display: block;
        color: white;
        background #009EFF
        height: 150px;
        width: 150px
      .remove-btn
        position: absolute;
        top: 0;
        right: 0;
        padding: 5px;
        color: white;
        cursor pointer
        display: none
      &:hover
        .remove-btn
          display block;
      .name
        font-size 8px
        color #2b2a2a
        position absolute
        bottom: 0
        background: white;
        padding: 10px;
        width: 100%;
        overflow hidden
        box-shadow 0 2px 5px rgba(0, 0, 0, 0.80);
  .button-bar
    text-align right
    padding-right 30px;
  .btn
    position relative;
    width 100px
    height 40px;
    background: #009EFF;
    border none
    font-size: 16px;
    color: #FFFFFF;
    letter-spacing: 0;
    line-height: 35px;
    text-align: center;
    cursor: pointer;
    &.cancel
      background: lightgray;
      box-shadow : none !important
    &.dijitDisabled
      cursor: not-allowed;
      background: lightgray;
      box-shadow : none !important
    &:focus
      outline:none
    &:hover
      box-shadow : 0px 2px 15px rgba(0, 0, 0, 0.25);
  .costMsg
  .errorMsg
    padding: 0px 30px 20px;
    text-align: right;
    color red
    display none;
  .add-btn
    cursor pointer
    text-align: center;
    display: block;
    color: white;
