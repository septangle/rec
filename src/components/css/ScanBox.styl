.ScanBox-Dialog
  background white
  width 90% !important
  height 90% !important
  .dijitDialogTitleBar
    display none
  .dijitDialogPaneContent
  iframe
    border none
    width 100% !important
    height 100% !important
.ScanBox
  width 200px
  height 200px
  display inline-block
  margin  25px
  box-shadow 0 2px 5px rgba(0, 0, 0, 0.80);
  position: relative;
  overflow: hidden;
  &:hover
    box-shadow 0 2px 15px rgba(0, 0, 0, 0.80);
    top 1px;
    left 1px
    .overlay
      bottom 0px
  .overlay
    position absolute
    bottom -66px
    width: 100%;
    height: 66px;
    transition 0.5s ease-out bottom
    .title
      background: black
      opacity 0.5
      padding: 6px 10px;
      line-height: 14px;
      font-size: 14px;
      color white
    .actions
      padding 0 5px;
      text-align right
      background: white;
      line-height: 20px;
      font-size: 20px;
      color: #cec8c8;
      .action
        padding: 10px 5px ;
        display inline-block
        &:hover
          color: gray;
  .thumbnail
    width 100%
    height 100%
    z-index 9px
