.ScanBox
  width 200px
  height 200px
  display inline-block
  margin  25px
  box-shadow 0 2px 5px rgba(0, 0, 0, 0.80);
  position: relative;
  overflow: hidden;
  cursor pointer
  &:hover
    box-shadow 0 2px 15px rgba(0, 0, 0, 0.80);
    top 1px;
    left 1px
  .actions-layer
    position absolute
    width: 100%;
    bottom 0px;
    .actions
      padding 0 5px;
      background: white;
      line-height: 20px;
      font-size: 20px;
      color: #cec8c8;
      .title
        display inline-block
        padding: 0px 10px;
        line-height: 40px;
        color black
        height: 40px;
        font-size 14px;
      .action
        float right
        padding: 10px 5px ;
        display inline-block
        &:hover
          color: gray;
  .icon-error
  .processing
    display none
    padding: 5px;
    position: absolute;
    top: 0;
    color: #ff0707;
    font-size: 25px;
    right: 0;
  .processing
    top:10px;
    color: white;
  .thumbnail
    width 100%
    height 100%
    z-index 9px
