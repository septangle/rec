.loaderMixin
  position relative; //default , can override it.
  &.loaderOverlay
  .loaderOverlay
    opacity:0.5;
    z-index: 9999;
    position: absolute;
    text-align center;
    width:100%;
    height:100%;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: white;
    display:  none;
    &.show
      display block;
    .loader
      position: relative;
      top: 50%;
      color: black;
